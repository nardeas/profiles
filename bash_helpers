# Bash profile helpers
alias uprofile="source ~/.bash_profile"
alias eprofile="nvim ~/.bash_profile"

# Show directory listing with colors
alias ls="ls -G"

# Path helpers
alias cdp="cd ~/Private"
alias cdd="cd ~/Desktop"
alias ooo="open ~"
alias odo="open ~/Downloads"

# Remove helpers
alias rm="trash -v"
alias rmq="trash"
alias rmf="/bin/rm"
alias rmff="/bin/rm -rf"
alias rmds="find . -name '.DS_Store' -type f -delete"

# File helpers
alias z="fuzzy_find_file"
alias ze="fuzzy_find_and_edit"
alias zl="fuzzy_find_and_show"
alias zf="fuzzy_find_in_file"
alias zfe="fuzzy_find_in_file_and_edit"

# Process helpers
alias px="show_process_by_name"

alias freestat="top -l 1 -s 0 | grep PhysMem"

alias gits="git_get_status"

alias lsop="list_open_ports"

alias rstr="create_random_string"

alias xclip="tr -d '\n' | pbcopy"
